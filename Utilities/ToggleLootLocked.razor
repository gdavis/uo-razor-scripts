# finds a lockable box in the backpack
# along with a key, and toggles it
# from being locked/unlocked.
@setvar! actionDelay 666

if targetexists 
    hotkey 'Clear Current Target'
endif

clearsysmsg 
if findtype 'wooden box' backpack as box and findtype 'copper key' backpack as key
    dclick key
    wft 6000
    target box
    wait actionDelay
    
    dclick box
    wait actionDelay
    
    if insysmsg 'It appears to be locked'
        overhead 'Locked.' 87
    else
        overhead 'Unlocked.' 44
    endif
    
    if gumpexists 736038070
        gumpclose 
    endif
endif
