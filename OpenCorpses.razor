@clearignore 

overhead 'Opening loot...' 54

if findtype 'hatch' ground any any 2 as asdf
    getlabel asdf aCorpse
    overhead 'Opening {{aCorpse}}' 89
    dclick asdf
    wait 500
endif

while findtype 'corpse' ground any any 2 as asdf
    getlabel asdf aCorpse
    overhead 'Opening {{aCorpse}}' 89
    dclick asdf
    wait 500
    @ignore asdf
endwhile

while findtype 'bones' ground any any 2 as asdf
    getlabel asdf aCorpse
    overhead 'Opening {{aCorpse}}' 89
    dclick asdf
    wait 500
    @ignore asdf
endwhile

overhead 'Done opening corpses.' 69