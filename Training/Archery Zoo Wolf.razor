if not warmode 
    overhead 'Warmode!'
    warmode 'on'
    setlasttarget
    attack lasttarget
endif

# ------ Pickup Ammo

# pickup bolts on the ground. stand close to target.
if findtype 'crossbow bolt' ground -1 -1 2 as ammo
    overhead 'Ah, look at that! One of my missed bolts.'
    lift ammo

    // quiver - the name does not work
    if findtype 12215 self as myQuiver
        drop myQuiver -1 -1 -1
    else 
        drop backpack -1 -1 -1
    endif
    
    wait 650
endif

