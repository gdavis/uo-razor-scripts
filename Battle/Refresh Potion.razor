if dead 
    overhead 'You Died.' 38
    stop
endif

if diffstam < 1
    overhead 'Not tired enough.' 38
endif
   
# Disarm, refresh, rearm
if findtype 'Red Potion' self as potion
    # Heavy Crossbow
    if findtype 'heavy crossbow' lefthand as xbow
        undress 'Heavy Crossbow'
        dclick potion
        wait 650
        dress 'Heavy Crossbow'
    # Crossbow
    
    # Bow
    elseif findtype 'bow' lefthand as bow 
        undress 'Bow'
        dclick potion
        wait 650
        dress 'Bow'
    else
        dclick potion
    endif
else
    overhead 'Out of refresh potions!' 38
endif
