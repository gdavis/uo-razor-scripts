if not varexist dressBag
    overhead 'Select a bag to use for dressing:'
    unsetvar dressBag
    setvar dressBag
endif

if not lhandempty
    lift lefthand
    wait 100
    drop dressBag -1 -1 -1
elseif not rhandempty
    lift righthand
    wait 100
    drop dressBag -1 -1 -1
endif

# 2599 == void aspect color
if findtype 'heavy crossbow' self 2599 as bow 
    dclick bow
    overhead 'Heavy Xbow Equipped' 53
else
    overhead 'Could not find void aspect heavy xbow!' 38
endif