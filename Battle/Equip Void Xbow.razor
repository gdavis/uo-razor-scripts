if not varexist dressBag
    overhead 'Select a bag to use for dressing:'
    unsetvar dressBag
    setvar dressBag
endif

if not lhandempty
    lift lefthand
    wait 100
    drop dressBag -1 -1 -1
elseif not rhandempty
    lift righthand
    wait 100
    drop dressBag -1 -1 -1
endif

# 2599 == void aspect color
if findtype 'crossbow' self 2599 as bow 
    dclick bow
    overhead 'Crossbow Equipped' 53
else
    overhead 'Could not find void aspect crossbow!' 38
endif