if not varexist dressBag or not find dressBag
    overhead 'Select a bag to use for dressing:'
    setvar dressBag
endif

if not lhandempty
    lift lefthand
    wait 100
    drop dressBag -1 -1 -1
elseif not rhandempty
    lift righthand
    wait 100
    drop dressBag -1 -1 -1
endif

# 1790 == shadow aspect color
if findtype 'bow' self 1790 as bow 
    dclick bow
    overhead 'Bow Equipped' 53
else
    overhead 'Could not find shadow aspect bow!' 38
endif