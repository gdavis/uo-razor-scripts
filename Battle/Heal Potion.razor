if dead 
    overhead 'You Died.' 38
    stop
endif

if diffhits < 20
    overhead 'Not hurt enough.' 38
endif
   
# Disarm, heal, rearm
if findtype 'Yellow Potion' self as potion
    # Heavy Crossbow
    if findtype 'heavy crossbow' lefthand as xbow
        undress 'Heavy Crossbow'
        dclick potion
        wait 650
        dress 'Heavy Crossbow'
    # Crossbow
    
    # Bow
    elseif findtype 'bow' lefthand as bow 
        undress 'Bow'
        dclick potion
        wait 650
        dress 'Bow'
    else 
        dclick potion
    endif
else
    overhead 'Out of heal potions!' 38
endif


